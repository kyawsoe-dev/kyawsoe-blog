---
// Enhanced Blog Post Layout for NestJS Series with Navigation
import Layout from './Layout.astro';
import { getCollection } from 'astro:content';

export interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: Date;
    author: string;
    heroImage?: string;
    tags?: string[];
    category?: string;
    technology?: string;
    level?: 'beginner' | 'intermediate' | 'advanced';
    draft?: boolean;
    readingTime?: number;
  };
}

const { frontmatter } = Astro.props;

// Get all NestJS posts to determine next/previous
const allNestJSPosts = (await getCollection('docs', ({ id }) =>
  id.includes('nestjs-') // Only include nestjs-* files in the main blog directory
)).sort((a, b) =>
  new Date(a.data.pubDate).getTime() - new Date(b.data.pubDate).getTime()
);

// Find current post index based on the actual file path
const currentPathParts = Astro.request.url.pathname.split('/');
const currentSlug = currentPathParts[currentPathParts.length - 1];

// Map URL slug to file name
const fileNameMap = {
  'nestjs-getting-started': 'nestjs-getting-started.md',
  'nestjs-authentication': 'nestjs-authentication.md',
  'nestjs-architecture': 'nestjs-architecture.md'
};

const currentFileName = fileNameMap[currentSlug] || `${currentSlug}.md`;

// Since the collection IDs include the full path, we need to match against the full path
const currentIndex = allNestJSPosts.findIndex(post =>
  post.id.endsWith(currentFileName) ||
  post.id.includes(currentFileName.replace('.md', ''))
);

// Determine previous and next posts
let prevPost = null;
let nextPost = null;

if (currentIndex !== -1) {
  if (currentIndex > 0) {
    prevPost = allNestJSPosts[currentIndex - 1];
  }
  if (currentIndex < allNestJSPosts.length - 1) {
    nextPost = allNestJSPosts[currentIndex + 1];
  }
}

// Format date consistently
const formattedDate = new Date(frontmatter.pubDate).toLocaleDateString(
  'en-US',
  { year: 'numeric', month: 'long', day: 'numeric' }
);

// In a real implementation, you'd pass the content of the post to calculate reading time
const readingTime = frontmatter.readingTime || 5; // Default to 5 minutes if not provided
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <article class="blog-post">
    <header>
      <h1>{frontmatter.title}</h1>
      <div class="meta">
        <span class="author">By {frontmatter.author}</span>
        <span class="date">{formattedDate}</span>
        <span class="reading-time">{readingTime} min read</span>

        <!-- Technology and Level badges -->
        {frontmatter.technology && (
          <span class="tech-badge">{frontmatter.technology}</span>
        )}

        {frontmatter.level && (
          <span class={`level-badge level-${frontmatter.level}`}>
            {frontmatter.level.charAt(0).toUpperCase() + frontmatter.level.slice(1)}
          </span>
        )}
      </div>

      {frontmatter.tags && frontmatter.tags.length > 0 && (
        <div class="tags">
          {frontmatter.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>

    <main>
      <slot />
    </main>

    <!-- Navigation between series posts -->
    <nav class="series-navigation">
      <div class="nav-links">
        {prevPost ? (
          <a href={`/blog/${prevPost.id.replace('.md', '')}`} class="nav-link prev">
            ← Previous: {prevPost.data.title}
          </a>
        ) : (
          <div class="nav-link disabled">← Previous: None</div>
        )}

        {nextPost ? (
          <a href={`/blog/${nextPost.id.replace('.md', '')}`} class="nav-link next">
            Next: {nextPost.data.title} →
          </a>
        ) : (
          <div class="nav-link disabled">Next: None →</div>
        )}
      </div>
    </nav>

    <footer>
      <div class="author-card">
        <img src="/public/logo.png" alt={frontmatter.author} width="80" height="80" />
        <div>
          <h3>About the Author</h3>
          <p>{frontmatter.author} is a passionate developer sharing knowledge and experiences.</p>
        </div>
      </div>

      <!-- Related posts section -->
      <div class="related-posts">
        <h3>Complete NestJS Series</h3>
        <ol class="series-list">
          {allNestJSPosts.map((post, index) => (
            <li class={`series-item ${post.id === allNestJSPosts[currentIndex]?.id ? 'current' : ''}`}>
              <a href={`/blog/${post.id.replace('.md', '')}`}>
                {index + 1}. {post.data.title}
              </a>
            </li>
          ))}
        </ol>
      </div>
    </footer>
  </article>
</Layout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .blog-post header {
    margin-bottom: 2rem;
  }

  .blog-post h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--astro-text-accent);
  }

  .meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 1rem;
    color: var(--astro-text-secondary);
  }

  .tech-badge {
    background-color: #3b82f6; /* Tailwind blue-500 */
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .level-badge {
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .level-beginner {
    background-color: #10b981; /* Tailwind green-500 */
    color: white;
  }

  .level-intermediate {
    background-color: #f59e0b; /* Tailwind amber-500 */
    color: white;
  }

  .level-advanced {
    background-color: #ef4444; /* Tailwind red-500 */
    color: white;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-top: 1rem;
  }

  .tag {
    background-color: var(--astro-accent-low);
    color: var(--astro-accent-high);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }

  .author-card {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--astro-border);
  }

  .author-card img {
    border-radius: 50%;
  }

  .related-posts {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--astro-border);
  }

  .related-posts h3 {
    margin-bottom: 1rem;
    color: var(--astro-text-accent);
  }

  .series-list {
    list-style: none;
    padding: 0;
    counter-reset: series-counter;
  }

  .series-item {
    counter-increment: series-counter;
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--astro-border);
  }

  .series-item::before {
    content: counter(series-counter) ". ";
    font-weight: bold;
    color: var(--astro-accent-high);
  }

  .series-item.current {
    font-weight: bold;
    background-color: var(--astro-accent-low);
    border-radius: 0.25rem;
  }

  .series-item a {
    text-decoration: none;
    color: inherit;
  }

  .series-item a:hover {
    text-decoration: underline;
  }

  .series-item:last-child {
    border-bottom: none;
  }

  .series-navigation {
    margin: 2rem 0;
    padding: 1.5rem 0;
    border-top: 1px solid var(--astro-border);
    border-bottom: 1px solid var(--astro-border);
  }

  .nav-links {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .nav-link {
    flex: 1;
    padding: 0.75rem 1.25rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    text-align: center;
    min-width: 150px;
  }

  .nav-link.prev {
    background-color: #eff6ff;
    color: #2563eb;
    border: 1px solid #dbeafe;
    text-align: left;
  }

  .nav-link.next {
    background-color: #eff6ff;
    color: #2563eb;
    border: 1px solid #dbeafe;
    text-align: right;
  }

  .nav-link.prev:hover, .nav-link.next:hover {
    background-color: #dbeafe;
    transform: translateY(-2px);
  }

  .nav-link.disabled {
    color: #9ca3af;
    background-color: #f9fafb;
    border: 1px solid #e5e7eb;
    cursor: not-allowed;
  }

  @media (max-width: 768px) {
    .nav-links {
      flex-direction: column;
    }

    .nav-link {
      width: 100%;
      text-align: center;
    }

    .nav-link.prev, .nav-link.next {
      text-align: center;
    }
  }
</style>